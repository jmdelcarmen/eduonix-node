extends ../../layouts/default

block head
 title View Events
 
block body
 div.row
  div.col-sm-8
   div.page-header
    h1 View Events
   ul.events
    each event, i in events
     li
      strong #{event.name} - 
      | posted by #{event.username}
      p #{event.description}
      a(href="/events/show/#{event._id}" class="btn btn-default") Read More
